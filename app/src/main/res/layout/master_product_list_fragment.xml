<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".master_detail.MasterProductListFragment">

    <TextView
        android:id="@+id/txtProductListtittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_product_list_tittle"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ListView
        android:id="@+id/ProductList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/master_product_list_element"
        android:divider="@null"
        android:dividerHeight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtProductListtittle"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>